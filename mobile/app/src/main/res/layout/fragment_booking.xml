<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f59f7e">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#495057"
        android:paddingVertical="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="Do You Wanna Booking?"
            android:textSize="15dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="7dp"
            android:background="@drawable/inputbackground"
            android:hint="Enter Your Name"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:drawablePadding="7dp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:padding="7dp"
            android:background="@drawable/inputbackground"
            android:hint="Enter Your Email"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="7dp"/>


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:background="@drawable/inputbackground"
            android:layout_marginBottom="15dp"
            android:hint="Enter Your Phone Number"
            android:ems="10"
            android:inputType="text"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="7dp"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp">
        <EditText
            android:id="@+id/tgl"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputbackground"
            android:padding="7dp"
            android:hint="Choose your Date -->"
            android:editable="false"
            android:textSize="20sp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="7dp"/>

        <Button
            android:id="@+id/btnTgl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/calendar" />
</LinearLayout>

<RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/inputbackground"
    android:layout_marginBottom="15dp">
    <Spinner
        android:id="@+id/waktu"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/waktuValue"
        style="@style/Widget.AppCompat.Spinner.Underlined"/>
        </RelativeLayout>

<RelativeLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/inputbackground"
     android:layout_marginBottom="15dp">
    <Spinner
        android:id="@+id/service"
        android:textAlignment="center"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/serviceValue" />
</RelativeLayout>

        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="New"
            android:visibility="invisible"/>


    <Button
        android:id="@+id/booking"
        android:textColor="#FFFF"
        android:layout_width="match_parent"

        android:layout_marginTop="35dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_loading"
        android:text="BOOKING" />
    </LinearLayout>
</LinearLayout>